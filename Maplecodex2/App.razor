@using Maplecodex2.Pages

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="alert-danger">
                <span style="font-size: 40px; font-weight:800;">404</span>
                <p></p>
                <span style="font-size: 24px;">Page Not Found. <a href="/">Go Home</a></span>
            </div>
        </LayoutView>
    </NotFound>
</Router>

<Maplecodex2.Components.Notification.NotificationWrapper />